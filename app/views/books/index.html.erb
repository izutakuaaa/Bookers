<% content_for :css do %>
  <%= stylesheet_link_tag 'index' %>
<% end %>
<div class="flash_index">
  <%= flash[:notice] %>
</div>
<body>
  <h1>Books</h1>
 <table>
   <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
   </tr>
  <% @books.each do |book|%>
   <tr>
     <td class="Title"><%= book.title %></td>
     <td class="Body"><%= book.body %></td>
     <td class="table_link"><%= link_to "Show", book_path(book) %></td>
     <td class="table_link"><%= link_to 'Edit', edit_book_path(book) %></td>
     <td class="table_link"><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: "本当に削除しますか？"}%></td>
   </tr>
   <%end%>
 </table>



 <div class="form">
   <h2>New book</h2>
   <% if @book.errors.any? %>
   <%= @book.errors.count %>件のerrors
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
   </ul>
   <% end %>

 <%= form_with(model: Book.new, url: books_path, local: true) do |form| %>
   <div class="field">
     <label class="Title_2">Title</label>
     <%= form.text_field :title %>
   </div>
   <div class="field">
     <label class="Body_2">Body</label>
     <%= form.text_area :body %>
   </div>
   <div class="actions">
     <%= form.submit %>
   </div>
 <% end %>
 </div>

</body>


