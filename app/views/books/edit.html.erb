<div class="flash_index">
  <%= flash[:notice] %>
</div>
<div class="edit_box">
  <h1>Edditing Book</h1>
  <% if @book.errors.any? %>
   <%= @book.errors.count %>件のerrors
    <ul class>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
   </ul>
   <% end %>
  <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
  <label class="title">Title</label>
  <%= f.text_field :title %>

  <label class="body">Body</label>
  <%= f.text_area :body %>

  <p><%= f.submit 'Update Book' %></p>
  <div class="link_buttons">
    <p><%=link_to 'show',book_path(@book)%></p>
    <p>|</p>
    <p><%=link_to 'back','/books'%></p>
  </div>


 <% end %>
</div>
